{
  "manifest_version": 3,
  "name": "Snap those tabs",
  "description": "Do yourself a favor and close all your tabs.",
  "version": "1.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "action": {
    "default_icon": "icon16.png"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  }
}
